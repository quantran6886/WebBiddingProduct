@model WebBiddingProduct.Areas.AreaAdmin.Models.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>Đăng nhập hệ thống</title>
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta content="width=device-width, initial-scale=1" name="viewport" />
	<meta content="Phần mềm quản lý đấu giá." name="description" />
	<meta content="" name="author" />
	<link rel="shortcut icon" href="~/qsoft.ico">
	<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500&display=swap" rel="stylesheet">
	<link href="~/libadmin/assets/vendor/material-icons/material-icons.css" rel="stylesheet">
	<link href="~/libadmin/assets/vendor/flags/css/flag-icon.min.css" rel="stylesheet">
	<link href="~/libadmin/assets/vendor/daterangepicker-master/daterangepicker.css" rel="stylesheet">
	<link href="~/libadmin/assets/css/style-darkblue-dark.css" rel="stylesheet" id="stylelink">
</head>
<body class="h-100 no-sidemenu">
	<div class="loader container-fluid">
	</div>
	<div class="wrapper">
		<div class="content shadow-sm position-relative">
			<header class="header">
				<!-- Fixed navbar -->
				<nav class="container-fluid">
					<div class="row">
						<div class="col align-self-center">
							<a href="" class="logo text-white">
								<div class="logo-text">
									<h5 class="fs22 mb-0">Quản trị website đấu giá trực tuyến <sup class="badge badge-danger">3.1.2</sup></h5>
								</div>
							</a>
						</div>
						<div class="col text-right align-self-center">
							<a href="" class="btn btn-sm btn-primary text-uppercase">Đăng ký tài khoản</a>
						</div>
					</div>
				</nav>
			</header>
			<div class="background opac blur">
				<img src="~/libadmin/assets/img/team.jpg" alt="">
			</div>

			<!-- Main container starts -->
			<div class="container main-container" id="main-container">
				<div class="row login-row-height">
					<div class="col-12 col-md-6 col-lg-7 d-none d-md-flex"></div>
					<div class="col-12 col-md-6 col-lg-5 col-xl-4  align-self-center">
						<div class="card border-0 shadow-lg blur">
							@using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form" }))
							{
								<div class="card-body py-5">
									<h3 class="font-weight-normal mb-2">Đăng nhập</h3>
									@Html.ValidationSummary(true, "", new { @class = "text-white" })
									@Html.AntiForgeryToken()
									<div class="form-group">
										@Html.LabelFor(m => m.UserName, "Tài khoản", new { @class = "sr-only" })
										@Html.TextBoxFor(m => m.UserName, new { @class = "form-control rounded-0 border-0", placeholder = "Nhập tài khoản" })
										@Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
									</div>

									<div class="form-group">
										@Html.LabelFor(m => m.Password, "Mật khẩu", new { @class = "sr-only" })
										@Html.PasswordFor(m => m.Password, new { @class = "form-control rounded-0 border-0", placeholder = "Nhập mật khẩu" })
										@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
									</div>

									<div class="form-group form-check">
										@Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
										@Html.LabelFor(m => m.RememberMe, "Ghi nhớ", new { @class = "form-check-label" })
									</div>

									<button type="submit" class="btn btn-primary btn-block">Đăng nhập</button>
								</div>
							}
						</div>
					</div>
				</div>
			</div>
		</div>
		<footer class="footer">
			<div class="container-fluid">
				<div class="row">
					<div class="col-12 col-md text-center text-md-left align-self-center">
						<p>@@Công ty TNHH Công Nghệ Phần Mềm Qsoft</p>
					</div>
					<div class="col-12 col-md-auto text-center text-md-right">
						<ul class="nav justify-content-center justify-md-content-end">
							<li class="nav-item">
								<a class="nav-link active" href="#">Điều khoản sử dụng</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="#">Chính sách bảo mật</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="contactus.html">Liên hệ với chúng tôi</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</footer>

	</div>
	<script src="~/libadmin/assets/js/jquery-3.3.1.min.js"></script>
	<script src="~/libadmin/assets/js/popper.min.js"></script>
	<script src="~/libadmin/assets/vendor/bootstrap/js/bootstrap.min.js"></script>
	<script src="~/libadmin/assets/vendor/cookie/jquery.cookie.js"></script>
	<script src="~/libadmin/assets/vendor/daterangepicker-master/moment.min.js"></script>
	<script src="~/libadmin/assets/vendor/daterangepicker-master/daterangepicker.js"></script>
	<script src="~/libadmin/assets/js/main.js"></script>
	<script src="~/libadmin/assets/js/style-picker.js"></script>
</body>
</html>
